<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  {{> baseStyles}}
  <style>
    .rr-project {
      padding: 0;
    }

    .rr-project .rr-accent {
      color: #2f2fcf;
    }

    .rr-project .rr-card {
      border: 1px solid #d9d9d9;
      border-radius: 10px;
      padding: 10px 12px;
      margin-bottom: 10px;
      break-inside: avoid;
      page-break-inside: avoid;
    }
  </style>
</head>

<body>
  <div class="rr-page rr-project">
    <div class="rr-header">
      <h1 class="rr-name rr-accent">{{personal.firstName}} {{personal.lastName}}</h1>
      {{#if personal.title}}
        <div class="rr-title">{{personal.title}}</div>
      {{/if}}
      <div class="rr-contact">
        {{#if personal.email}}{{personal.email}}{{/if}}
        {{#if personal.phone}} · {{personal.phone}}{{/if}}
        {{#if personal.linkedin}} · {{personal.linkedin}}{{/if}}
      </div>
    </div>

    {{#if projects}}
      {{#if projects.length}}
        <div class="rr-section">
          <div class="rr-section-title">Projects</div>
          {{#each projects}}
            <div class="rr-card">
              <div class="rr-item-title">{{name}}</div>
              {{#if link}}
                <div class="rr-item-sub">{{link}}</div>
              {{/if}}
              <div class="rr-muted" style="margin-top:6px;">{{description}}</div>
            </div>
          {{/each}}
        </div>
      {{/if}}
    {{/if}}

    {{#if skills}}
      {{#if skills.length}}
        <div class="rr-section">
          <div class="rr-section-title">Skills</div>
          <div class="rr-tags">
            {{#each skills}}
              <span class="rr-tag">{{this}}</span>
            {{/each}}
          </div>
        </div>
      {{/if}}
    {{/if}}
  </div>
</body>
</html>
