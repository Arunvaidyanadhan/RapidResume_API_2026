<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{personal.firstName}} {{personal.lastName}} - Resume</title>

  {{> baseStyles}}

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #222;
      background-color: #fff;
      padding: 2rem;
    }

    .header {
      background-color: #131417;
      color: white;
      padding: 2rem;
      border-radius: 0.5rem;
      margin-bottom: 2rem;
      display: flex;
      align-items: center;
      gap: 2rem;
    }

    .profile-img {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 50%;
      border: 3px solid white;
      background-color: #eee;
    }

    .header-content h1 {
      margin: 0;
      font-size: 2.5rem;
    }

    .contact-info {
      font-size: 1rem;
      margin-top: 0.5rem;
    }

    .section {
      margin-bottom: 2rem;
    }

    .section-title {
      font-size: 1.5rem;
      font-weight: 600;
      border-bottom: 2px solid #ccc;
      padding-bottom: 0.3rem;
      margin-bottom: 1rem;
      color: #333;
    }

    .badge {
      display: inline-block;
      background-color: #859dfc;
      color: white;
      padding: 0.4rem 0.8rem;
      border-radius: 5px;
      font-size: 0.9rem;
      margin: 0.2rem;
    }

    ul {
      padding-left: 1.2rem;
    }

    li {
      margin-bottom: 0.3rem;
    }

    a {
      color: #003366;
    }
  </style>
</head>
<body>

  <!-- Header -->
  <div class="header">
    {{#if personal.profileImage}}
      <img src="{{personal.profileImage}}" class="profile-img" />
    {{else}}
      <div class="profile-img"></div>
    {{/if}}

    <div class="header-content">
      <h1>{{personal.firstName}} {{personal.lastName}}</h1>
      <div class="contact-info">
        {{personal.email}} | {{personal.phone}}
        {{#if personal.linkedin}}
          | {{personal.linkedin}}
        {{/if}}
      </div>
    </div>
  </div>

  <!-- Summary -->
  {{#if summary}}
    <div class="section">
      <div class="section-title">Summary</div>
      <p>{{summary}}</p>
    </div>
  {{/if}}

  <!-- Skills -->
  {{#if skills.length}}
    <div class="section">
      <div class="section-title">Skills</div>
      {{#each skills}}
        <span class="badge">{{this}}</span>
      {{/each}}
    </div>
  {{/if}}

  <!-- Work Experience -->
  {{#if experience.length}}
    <div class="section">
      <div class="section-title">Work Experience</div>

      {{#each experience}}
        <div class="mb-3">
          <h3>{{jobTitle}} at {{employer}}</h3>
          <small>{{startDate}} – {{presentOrEnd current endDate}}</small>

          {{#if description}}
            <ul>
              {{#each (splitLines description)}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{/if}}

  <!-- Projects -->
  {{#if projects.length}}
    <div class="section">
      <div class="section-title">Projects</div>

      {{#each projects}}
        <div class="mb-3">
          <h3>{{name}}</h3>
          {{#if link}}
            <p><a href="{{link}}">{{link}}</a></p>
          {{/if}}
          <p>{{description}}</p>
        </div>
      {{/each}}
    </div>
  {{/if}}

  <!-- Education -->
  {{#if education.length}}
    <div class="section">
      <div class="section-title">Education</div>

      {{#each education}}
        <div class="mb-3">
          <h3>{{degree}} in {{fieldOfStudy}}</h3>
          <p>{{school}} | {{startDate}} – {{endDate}}</p>
        </div>
      {{/each}}
    </div>
  {{/if}}

  <!-- Certifications -->
  {{#if certifications.length}}
    <div class="section">
      <div class="section-title">Certifications</div>
      <ul>
        {{#each certifications}}
          <li>{{name}} - {{issuer}} ({{year}})</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

</body>
</html>
