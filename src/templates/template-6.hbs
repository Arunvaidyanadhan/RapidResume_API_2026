<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{personal.firstName}} {{personal.lastName}} - Resume</title>
  {{> baseStyles}}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
      color: #333;
    }

    .resume-wrapper {
      max-width: 850px;
      margin: 2rem auto;
      background-color: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .header {
      background-color: #4e6ef2;
      color: white;
      padding: 2rem;
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }

    .header img {
      width: 100px;
      height: 100px;
      object-fit: cover;
      border-radius: 50%;
      border: 3px solid white;
      background-color: #eee;
    }

    .header h1 {
      margin: 0;
      font-size: 2rem;
    }

    .header .contact {
      margin-top: 0.3rem;
      font-size: 0.9rem;
    }

    .section {
      padding: 1.5rem 2rem;
      border-bottom: 1px solid #ddd;
    }

    .section-title {
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 0.8rem;
      color: #4e6ef2;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .skills-bar {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .skills-bar .skill {
      background-color: #4e6ef2;
      color: white;
      padding: 0.3rem 0.6rem;
      border-radius: 5px;
      font-size: 0.85rem;
    }

    .item h5 {
      margin: 0;
      font-size: 1rem;
    }

    .item small {
      color: #666;
    }

    ul {
      padding-left: 1.2rem;
    }

    li {
      margin-bottom: 0.3rem;
    }

    a {
      color: #4e6ef2;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    @media (max-width: 576px) {
      .header {
        flex-direction: column;
        text-align: center;
      }
    }
  </style>
</head>
<body>

<div class="resume-wrapper">

  <!-- Header -->
  <div class="header">
    {{#if personal.profileImage}}
      <img src="{{personal.profileImage}}" alt="Profile">
    {{else}}
      <div style="width:100px;height:100px;background:#ccc;border-radius:50%;"></div>
    {{/if}}
    <div>
      <h1>{{personal.firstName}} {{personal.lastName}}</h1>
      <div class="contact">
        {{personal.email}} | {{personal.phone}}
        {{#if personal.linkedin}} | <a href="{{personal.linkedin}}" target="_blank">LinkedIn</a>{{/if}}
      </div>
    </div>
  </div>

  <!-- Summary -->
  {{#if summary}}
  <div class="section">
    <div class="section-title">Summary</div>
    <p>{{summary}}</p>
  </div>
  {{/if}}

  <!-- Skills -->
  {{#if skills.length}}
  <div class="section">
    <div class="section-title">Skills</div>
    <div class="skills-bar">
      {{#each skills}}
        <div class="skill">{{this}}</div>
      {{/each}}
    </div>
  </div>
  {{/if}}

  <!-- Experience -->
  {{#if experience.length}}
  <div class="section">
    <div class="section-title">Experience</div>
    {{#each experience}}
      <div class="item mb-3">
        <h5>{{jobTitle}} at {{employer}}</h5>
        <small>{{startDate}} – {{presentOrEnd current endDate}}</small>
        {{#if description}}
        <ul>
          {{#each (splitLines description)}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
        {{/if}}
      </div>
    {{/each}}
  </div>
  {{/if}}

  <!-- Projects -->
  {{#if projects.length}}
  <div class="section">
    <div class="section-title">Projects</div>
    {{#each projects}}
      <div class="item mb-3">
        <h5>{{name}}</h5>
        {{#if link}}
          <p><a href="{{link}}" target="_blank">{{link}}</a></p>
        {{/if}}
        <p>{{description}}</p>
      </div>
    {{/each}}
  </div>
  {{/if}}

  <!-- Education -->
  {{#if education.length}}
  <div class="section">
    <div class="section-title">Education</div>
    {{#each education}}
      <div class="item mb-2">
        <h5>{{degree}} - {{fieldOfStudy}}</h5>
        <p>{{school}} | {{startDate}} – {{endDate}}</p>
      </div>
    {{/each}}
  </div>
  {{/if}}

  <!-- Certifications -->
  {{#if certifications.length}}
  <div class="section">
    <div class="section-title">Certifications</div>
    <ul>
      {{#each certifications}}
        <li>{{name}} - {{issuer}} ({{year}})</li>
      {{/each}}
    </ul>
  </div>
  {{/if}}

</div>

</body>
</html>
