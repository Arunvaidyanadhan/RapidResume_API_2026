<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  {{> baseStyles}}

  <style>
    body {
      font-family: Arial, sans-serif;
    }

    .rr-layout {
      display: flex;
      min-height: 100vh;
    }

    /* LEFT SIDEBAR */
    .rr-sidebar {
      width: 32%;
      background: #3b3b3b;
      color: #fff;
      padding: 30px 25px;
    }

    .rr-photo {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      margin-bottom: 20px;
      object-fit: cover;
    }

    .rr-side-title {
      font-size: 14px;
      font-weight: bold;
      margin-top: 25px;
      margin-bottom: 10px;
      text-transform: uppercase;
    }

    .rr-side-text {
      font-size: 12px;
      line-height: 1.5;
    }

    .rr-list {
      padding-left: 15px;
      font-size: 12px;
    }

    /* RIGHT CONTENT */
    .rr-main {
      width: 68%;
      padding: 30px;
    }

    .rr-name {
      font-size: 32px;
      font-weight: bold;
    }

    .rr-title {
      font-size: 14px;
      color: #555;
      margin-bottom: 20px;
    }

    .rr-section {
      margin-top: 30px;
    }

    .rr-section-title {
      font-size: 14px;
      font-weight: bold;
      border-bottom: 1px solid #000;
      padding-bottom: 4px;
      margin-bottom: 12px;
      text-transform: uppercase;
    }

    .rr-item {
      margin-bottom: 15px;
    }

    .rr-item-title {
      font-weight: bold;
      font-size: 13px;
    }

    .rr-muted {
      font-size: 12px;
      color: #555;
    }

    .rr-skill-bar {
      height: 6px;
      background: #ddd;
      margin-bottom: 8px;
    }

    .rr-skill-fill {
      height: 100%;
      background: #333;
    }
  </style>
</head>

<body>
  <div class="rr-layout">

    <!-- LEFT -->
    <aside class="rr-sidebar">

      {{#if personal.photo}}
        <img src="{{personal.photo}}" class="rr-photo" />
      {{/if}}

     {{#if summary.text}}
  <div class="rr-side-text">
    {{summary.text}}
  </div>
{{/if}}


      {{#if links.length}}
        <div class="rr-side-title">Links</div>
        {{#each links}}
          <div class="rr-side-text">{{label}}: {{url}}</div>
        {{/each}}
      {{/if}}

      {{#if references.length}}
        <div class="rr-side-title">Reference</div>
        {{#each references}}
          <div class="rr-side-text">
            <strong>{{name}}</strong><br />
            {{designation}}<br />
            {{contact}}
          </div>
        {{/each}}
      {{/if}}

{{#if hobbies.length}}
  <ul class="rr-list">
    {{#each hobbies}}
      <li>{{name}}</li>
    {{/each}}
  </ul>
{{/if}}


    </aside>

    <!-- RIGHT -->
    <main class="rr-main">

      <div class="rr-name">{{personal.firstName}} {{personal.lastName}}</div>
      {{#if personal.title}}
        <div class="rr-title">{{personal.title}}</div>
      {{/if}}

      {{#if experience.length}}
        <div class="rr-section">
          <div class="rr-section-title">Work Experience</div>
          {{#each experience}}
            <div class="rr-item">
              <div class="rr-item-title">{{role}} â€“ {{company}}</div>
              <div class="rr-muted">{{location}} | {{start}} - {{end}}</div>
              <ul class="rr-list">
                {{#each responsibilities}}
                  <li>{{this}}</li>
                {{/each}}
              </ul>
            </div>
          {{/each}}
        </div>
      {{/if}}

      {{#if education.length}}
        <div class="rr-section">
          <div class="rr-section-title">Education</div>
          {{#each education}}
            <div class="rr-item">
              <div class="rr-item-title">{{degree}}</div>
              <div class="rr-muted">{{institution}} | {{year}}</div>
            </div>
          {{/each}}
        </div>
      {{/if}}

      {{#if skills.length}}
        <div class="rr-section">
          <div class="rr-section-title">Skills</div>
          {{#each skills}}
            <div class="rr-muted">{{name}}</div>
            <div class="rr-skill-bar">
              <div class="rr-skill-fill" style="width: {{level}}%;"></div>
            </div>
          {{/each}}
        </div>
      {{/if}}

      {{#each languages}}
  <div class="rr-muted">{{name}}</div>
{{/each}}


    </main>
  </div>
</body>
</html>
