<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{personal.firstName}} {{personal.lastName}} - Resume</title>
  {{> baseStyles}}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      color: #333;
      background-color: #f8f9fa;
    }

    .resume-container {
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      width: 280px;
      background-color: #2c3e50;
      color: white;
      padding: 2rem 1rem;
      text-align: center;
    }

    .sidebar img {
      width: 120px;
      height: 120px;
      object-fit: cover;
      border-radius: 50%;
      margin-bottom: 1rem;
      border: 3px solid #fff;
      display: block;
      margin-left: auto;
      margin-right: auto;
    }

    .sidebar .profile-placeholder {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      margin-bottom: 1rem;
      border: 3px solid #fff;
      background: rgba(255,255,255,0.2);
      display: block;
      margin-left: auto;
      margin-right: auto;
    }

    .sidebar h2 {
      font-size: 1.5rem;
      margin: 0.5rem 0;
    }

    .sidebar p, .sidebar a {
      font-size: 0.9rem;
      color: white;
      text-decoration: none;
    }

    .sidebar hr {
      border-color: rgba(255,255,255,0.3);
    }

    .main-content {
      flex: 1;
      padding: 2rem;
      background-color: white;
    }

    .section {
      margin-bottom: 2rem;
    }

    .section-title {
      font-size: 1.25rem;
      font-weight: bold;
      color: #2c3e50;
      border-bottom: 2px solid #dee2e6;
      margin-bottom: 1rem;
    }

    .badge {
      background-color: #3498db;
      color: white;
      margin: 0.2rem;
      padding: 0.3rem 0.6rem;
      border-radius: 0.25rem;
      font-size: 0.85rem;
      display: inline-block;
    }

    ul {
      padding-left: 1.2rem;
    }

    li {
      margin-bottom: 0.3rem;
    }
  </style>
</head>
<body>

  <div class="resume-container">

    <!-- Sidebar -->
    <div class="sidebar">
      {{#if personal.profileImage}}
        <img src="{{personal.profileImage}}" alt="Profile Picture">
      {{else}}
        <div class="profile-placeholder"></div>
      {{/if}}
      <h2>{{personal.firstName}} {{personal.lastName}}</h2>
      <p>{{personal.email}}</p>
      <p>{{personal.phone}}</p>
      {{#if personal.linkedin}}
        <p><a href="{{personal.linkedin}}" target="_blank">LinkedIn</a></p>
      {{/if}}
      <hr />
      {{#if skills.length}}
        <h5>Skills</h5>
        {{#each skills}}
          <div class="badge">{{this}}</div>
        {{/each}}
      {{/if}}
    </div>

    <!-- Main Content -->
    <div class="main-content">

      {{#if summary}}
        <div class="section">
          <div class="section-title">Summary</div>
          <p>{{summary}}</p>
        </div>
      {{/if}}

      {{#if experience.length}}
        <div class="section">
          <div class="section-title">Work Experience</div>
          {{#each experience}}
            <div class="mb-3">
              <h5>{{jobTitle}} at {{employer}}</h5>
              <small>{{startDate}} – {{presentOrEnd current endDate}}</small>
              {{#if description}}
                <ul>
                  {{#each (splitLines description)}}
                    <li>{{this}}</li>
                  {{/each}}
                </ul>
              {{/if}}
            </div>
          {{/each}}
        </div>
      {{/if}}

      {{#if projects.length}}
        <div class="section">
          <div class="section-title">Projects</div>
          {{#each projects}}
            <div class="mb-3">
              <h5>{{name}}</h5>
              {{#if link}}
                <p><a href="{{link}}" target="_blank">{{link}}</a></p>
              {{/if}}
              <p>{{description}}</p>
            </div>
          {{/each}}
        </div>
      {{/if}}

      {{#if education.length}}
        <div class="section">
          <div class="section-title">Education</div>
          {{#each education}}
            <div class="mb-2">
              <h6>{{degree}} - {{fieldOfStudy}}</h6>
              <p>{{school}} | {{startDate}} – {{endDate}}</p>
            </div>
          {{/each}}
        </div>
      {{/if}}

      {{#if certifications.length}}
        <div class="section">
          <div class="section-title">Certifications</div>
          <ul>
            {{#each certifications}}
              <li>{{name}} - {{issuer}} ({{year}})</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}

    </div>

  </div>

</body>
</html>
