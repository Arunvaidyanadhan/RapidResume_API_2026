<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />

  <title>
    {{personal.firstName}} {{personal.lastName}} - Resume
  </title>

  {{> baseStyles}}

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
      color: #333;
    }

    h1 {
      color: #d72626;
    }

    h2 {
      margin-top: 1.2rem;
    }

    .section {
      margin-bottom: 20px;
      padding: 15px;
      background-color: #f6f6ff;
      border-radius: 6px;
    }

    ul {
      padding-left: 1.2rem;
    }

    li {
      margin-bottom: 0.4rem;
    }

    a {
      text-decoration: none;
      color: #0d6efd;
    }
  </style>
</head>

<body>

  <!-- ================= HEADER ================= -->
  <h1>
    {{personal.firstName}} {{personal.lastName}}
  </h1>

  <p>
    {{#if personal.email}}
      {{personal.email}}
    {{/if}}

    {{#if personal.phone}}
      | {{personal.phone}}
    {{/if}}

    {{#if personal.linkedin}}
      | <a href="{{personal.linkedin}}">LinkedIn</a>
    {{/if}}
  </p>

  <!-- ================= SUMMARY ================= -->
  {{#if summary}}
    <div class="section">
      <h2>Summary</h2>
      <p>{{summary}}</p>
    </div>
  {{/if}}

  <!-- ================= WORK EXPERIENCE ================= -->
  {{#if experience}}
    {{#if experience.length}}
      <div class="section">
        <h2>Work Experience</h2>

        <ul>
          {{#each experience}}
            <li>
              <strong>{{jobTitle}}</strong>
              at {{employer}}
              ({{startDate}} – {{presentOrEnd current endDate}})

              {{#if description}}
                <ul>
                  {{#each (splitLines description)}}
                    <li>{{this}}</li>
                  {{/each}}
                </ul>
              {{/if}}
            </li>
          {{/each}}
        </ul>

      </div>
    {{/if}}
  {{/if}}

  <!-- ================= PROJECTS ================= -->
  {{#if projects}}
    {{#if projects.length}}
      <div class="section">
        <h2>Projects</h2>

        <ul>
          {{#each projects}}
            <li>
              <strong>{{name}}</strong><br />

              {{#if link}}
                <a href="{{link}}">{{link}}</a><br />
              {{/if}}

              {{description}}
            </li>
          {{/each}}
        </ul>

      </div>
    {{/if}}
  {{/if}}

  <!-- ================= EDUCATION ================= -->
  {{#if education}}
    {{#if education.length}}
      <div class="section">
        <h2>Education</h2>

        <ul>
          {{#each education}}
            <li>
              <strong>{{degree}} {{fieldOfStudy}}</strong><br />
              {{school}}
              ({{startDate}} – {{presentOrEnd false endDate}})
            </li>
          {{/each}}
        </ul>

      </div>
    {{/if}}
  {{/if}}

  <!-- ================= CERTIFICATIONS ================= -->
  {{#if certifications}}
    {{#if certifications.length}}
      <div class="section">
        <h2>Certifications</h2>

        <ul>
          {{#each certifications}}
            <li>
              {{name}} - {{issuer}} ({{year}})
            </li>
          {{/each}}
        </ul>

      </div>
    {{/if}}
  {{/if}}

  <!-- ================= SKILLS ================= -->
  {{#if skills}}
    {{#if skills.length}}
      <div class="section">
        <h2>Skills</h2>
        <p>
          {{#each skills}}
            {{this}}{{#unless @last}}, {{/unless}}
          {{/each}}
        </p>
      </div>
    {{/if}}
  {{/if}}

</body>
</html>
